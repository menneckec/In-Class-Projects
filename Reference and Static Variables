#include "stdafx.h"
#include <iostream>
#include <iomanip>
using namespace std;

//Global variables//
double highScore;
double lowScore = 11;
double scoreTotal;

////
double findHighest(double judgeData);
double findLowest(double judgeData);
double getJudgeData(double &judgeScore);
double calcScore(double &scoreAverage);


double getJudgeData(double &judgeScore) {
	cout << "Please enter your score.";
	cin >> judgeScore;
	while (judgeScore < 0 || judgeScore>10) {
		cout << "That is an invalid amount. Please enter a value between 1 and 10." << endl;
		cin >> judgeScore;
	}
	scoreTotal += judgeScore;
	if (judgeScore > highScore) {
		findHighest(judgeScore);
	}
	if (judgeScore < lowScore) {
		findLowest(judgeScore);
	}

	return judgeScore;
}


double findHighest(double judgeData) {

	highScore = judgeData;
	return highScore;
}

double findLowest(double judgeData) {

	lowScore = judgeData;
	return lowScore;
}

double calcScore(double &scoreAverage) {
	scoreAverage = (scoreTotal - highScore - lowScore) / 3;
	return scoreAverage;

}


int main()
{
	double averageScore;
	double judgeScore1, judgeScore2, judgeScore3, judgeScore4, judgeScore5;

	getJudgeData(judgeScore1);
	cout << scoreTotal << endl;

	getJudgeData(judgeScore2);
	cout << scoreTotal << endl;

	getJudgeData(judgeScore3);
	cout << scoreTotal << endl;

	getJudgeData(judgeScore4);
	cout << scoreTotal << endl;

	getJudgeData(judgeScore5);
	cout << scoreTotal << endl;

	cout << "Average Score: " << calcScore(averageScore) << endl;

	system("pause");
    return 0;
}
